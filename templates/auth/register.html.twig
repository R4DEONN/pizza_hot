{% extends "footer.html.twig" %}

{% block title %}
  Регистрация
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/auth/auth.css" />
{% endblock %}


{% block main %}
  <main class="content">
    <p class="content_title">Регистрация на сайте</p>
    {{ form_start(form, {'class': 'content_form form'}) }}
    <div class="content_form form">
      <div class="form_form-row form-row">
        <p class="form-row_title">Имя*</p>
        {{ form_widget(form.firstName) }}
      </div>
      <div class="form_form-row form-row">
        <p class="form-row_title">Фамилия*</p>
        {{ form_widget(form.lastName) }}
      </div>
      <div class="form_form-row form-row">
        <p class="form-row_title">Email*</p>
        {{ form_widget(form.email) }}
      </div>
      <div class="form_form-row form-row">
        <p class="form-row_title">Пароль*</p>
        {{ form_widget(form.password) }}
      </div>
      <div class="form_form-row form-row">
        <p class="form-row_title">Номер телефона*</p>
        {{ form_widget(form.phone) }}
      </div>
      <div class="form_form-row form-row">
        <p class="form-row_title">Аватар</p>
        <label class="input-file">
            <span class="input-file-btn">Выберите файл</span>
            {{ form_widget(form.avatar) }}
            <span class="input-file-text" type="text">Файл не выбран</span>
        </label>
      </div>
      <div class="form_form-row form-row">
        {{ form_widget(form.register, { 'label': 'Регистрация' }) }}
      </div>
    </div>
    {{ form_end(form) }}

  </main>

  <script src="https://snipp.ru/cdn/jquery/2.1.1/jquery.min.js"></script>
  <script>
  $('.input-file input[type=file]').on('change', function(){
      let file = this.files[0];
      $(this).closest('.input-file').find('.input-file-text').html(file.name);
  });
  </script>
{% endblock %}